@model ATMWeb.Models.Saque

@{
    ViewData["Title"] = "Create";
}
<div class=" text-center">


    <hr />

    <div>
        <img src="~/img/Ico_Saque.png" width="250" height="250" />
        <h2 class="text-center">Informe o Valor <br /> que deseja Sacar...</h2>

    </div>
    <wbr />


    <div class="text-center">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="text-center form-group">
                <label id="tx-sacar">Valor R$ </label>
                <input id="tx-sacar" asp-for="Valor" class="text-center" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <wbr />
            <div class="form-group">
                <input id="bt-sl-saque" type="submit" value="Sacar" class="btn btn-success" />
                <a id="bt-sl-saque" class="btn btn-warning" asp-controller="Home" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
    <hr />
    
    <h3 class="alert-danger" >@ViewBag.ValorSaque</h3>
    <h3 class="alert-danger" >@ViewBag.Disponivel </h3>

</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


