@model IEnumerable<ATMWeb.Models.Notas>

@{
    ViewData["Title"] = "Index";

    int qtde = 0;int valor = 0;

    foreach (var item in Model){ 
        qtde += item.Qtde;
        valor += (int)(item.Qtde * item.Valor); }

}

<h3>Cadastramento de Notas: <a class="btn btn-primary" asp-action="Create" title="Novo"> + </a></h3>
<h5> Total de Notas: @qtde  / Valor Total em Reais: @valor.ToString("C2")</h5>
<table class="table">
    <thead>
        <tr>

            <th>
                Imagem da Nota
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Nota)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Qtde)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td class="text-xl-left">
                <img src="@Html.DisplayFor(modelItem => item.ImgNota)" width="200" height="80"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nota)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Qtde)
            </td>

            <td>
                <a class="badge badge-success" asp-action="Edit" asp-route-id="@item.NotasId">Edit</a>
                <a class="badge badge-danger" asp-action="Delete" asp-route-id="@item.NotasId">Delete</a>
                
            </td>
        </tr>
}
    </tbody>
</table>
