@model ATMWeb.Models.Notas

@{
    ViewData["Title"] = "Edit";
}

<h1>Parametrização e Atualizar Nota</h1>
<hr />

<img class="text-center" src="@Html.DisplayFor(model => model.ImgNota)" width="300" height="150">

<hr />
<div class="container">


    <form asp-action="Edit">

        <div class="col-md-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="NotasId" />
            <div class="form-group">
                <label asp-for="Nota" class="control-label"></label>
                <input asp-for="Nota" class="form-control" />
                <span asp-validation-for="Nota" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Valor" class="control-label"></label>
                <input asp-for="Valor" class="form-control" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Qtde" class="control-label"></label>
                <input asp-for="Qtde" class="form-control" />
                <span asp-validation-for="Qtde" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImgNota" class="control-label"></label>
                <input asp-for="ImgNota" class="form-control" />
                <span asp-validation-for="ImgNota" class="text-danger"></span>

            </div>

            <hr />
            <div class="container">

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-success" />
                    <a class="btn btn-primary" asp-action="Index">Voltar</a>
                </div>

            </div>

        </div>
    </form>
</div>





@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
